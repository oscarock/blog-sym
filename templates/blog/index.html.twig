{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
<div class="container">
    {% for blog in blogs %}
        <div class="row">
            <div class="col-md-8">
                <h1 class="my-4">{{ blog.title }}</h1>
                
                <div class="card mb-4">
                <!--<img class="card-img-top" src="http://placehold.it/750x300" alt="Card image cap">-->
                <img class="card-img-top" src="{{ blog.image }}" alt="Card image cap">
                <div class="card-body">
                    <h6 class="card-title"><b>Categoria:</b> {{ blog.topic }}</h6>
                    <p class="card-text">{{ blog.body  }}</p>
                    <a href="#" class="btn btn-primary">Ver Mas &rarr;</a>
                </div>
                <div class="card-footer text-muted">
                    Creado {{ blog.created|date('Y-m-d') }} Por
                    <a href="#">{{ blog.author  }}</a>
                    <a href="#" class="btn btn-link btn-sm float-right">Editar</a>
                </div>
            </div>
        </div>
    {% endfor %}  
    


    <div class="col-md-4">
        <div class="card my-4">
            <h5 class="card-header">Search</h5>
            <div class="card-body">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-secondary" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>

        <div class="card my-4">
          <h5 class="card-header">Categories</h5>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="list-unstyled mb-0">
                            <li>
                                <a href="#">Web Design</a>
                            </li>
                            <li>
                                <a href="#">HTML</a>
                            </li>
                            <li>
                                <a href="#">Freebies</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul class="list-unstyled mb-0">
                        <li>
                            <a href="#">JavaScript</a>
                        </li>
                        <li>
                            <a href="#">CSS</a>
                        </li>
                        <li>
                            <a href="#">Tutorials</a>
                        </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
